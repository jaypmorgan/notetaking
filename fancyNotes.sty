\renewcommand{\title}[1]{\def\TITLE{#1}}%
\renewcommand{\author}[1]{\def\AUTHOR{#1}}%

\allsectionsfont{\mdseries\scshape}

\pagestyle{fancy}
\fancyhf{}
\renewcommand{\footrulewidth}{0.01pt}
\fancyhead[LE,LO]{\TITLE}
\fancyhead[RE,RO]{\today}
\fancyfoot[RE,RO]{\thepage}

% \linespread{1.15}
\newcommand{\note}[1]{\reversemarginpar\marginpar{\begin{flushright}\scriptsize #1\end{flushright}}}%

\setlength{\parskip}{10pt} \setlength{\parindent}{0pt}

%%% default table fonts
\pgfplotstableset{%
  every head row/.style={before row={\toprule}, after row={\midrule}},
  every last row/.style={after row={\bottomrule}},
  assign column name/.style={%
    /pgfplots/table/column name={\textsc{#1}},
  },
}

% links in footer
\renewcommand{\href}[2]{#2\footnote{\url{#1}}}%


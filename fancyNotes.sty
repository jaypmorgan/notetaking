\renewcommand{\title}[1]{\def\TITLE{#1}}
\renewcommand{\author}[1]{\def\AUTHOR{#1}}

\pagestyle{fancy}
\fancyhf{}
\ifdefined\AUTHOR
    \lhead{\TITLE - \AUTHOR}
\else
    \lhead{\TITLE}
\fi

\rhead{\today}
\fancyfoot[RE]{Page \thepage}
\fancyfoot[LO]{Page \thepage}

\setlength{\parskip}{1em}
\setlength{\parindent}{0em}
\newcommand{\note}[1]{\marginpar{#1}}

\linenumbers
